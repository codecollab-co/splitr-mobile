# Production Environment (Convex)
NODE_ENV=production

# API Configuration
API_BASE_URL=https://api.splitr.app/api

# Database Mode
DATABASE_MODE=convex

# Convex Configuration
CONVEX_URL=https://splitr-production.convex.cloud
CONVEX_DEPLOYMENT=splitr-production

# Socket Configuration
SOCKET_URL=https://api.splitr.app

# Authentication
AUTH_PROVIDER=custom

# App Configuration
APP_NAME=Splitr
APP_VERSION=1.0.0

# Debug Settings
DEBUG=false
LOG_LEVEL=error

# Feature Flags
ENABLE_OFFLINE_MODE=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_ANALYTICS=true

# Development Tools
ENABLE_FLIPPER=false
ENABLE_REACTOTRON=false

# Performance
ENABLE_HERMES=true
ENABLE_PERFORMANCE_MONITORING=true