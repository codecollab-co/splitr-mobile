# Staging Environment (Convex)
NODE_ENV=staging

# API Configuration
API_BASE_URL=https://splitr-backend-staging.vercel.app/api

# Database Mode
DATABASE_MODE=convex

# Convex Configuration
CONVEX_URL=https://splitr-staging.convex.cloud
CONVEX_DEPLOYMENT=splitr-staging

# Socket Configuration
SOCKET_URL=https://splitr-backend-staging.vercel.app

# Authentication
AUTH_PROVIDER=custom

# App Configuration
APP_NAME=Splitr (Staging)
APP_VERSION=1.0.0-staging

# Debug Settings
DEBUG=false
LOG_LEVEL=warn

# Feature Flags
ENABLE_OFFLINE_MODE=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_ANALYTICS=true

# Development Tools
ENABLE_FLIPPER=false
ENABLE_REACTOTRON=false